# セキュリティ設定
# インストールスクリプトの無効化（サプライチェーン攻撃対策）
ignore-scripts=true

# 監査レベルの設定（moderate以上の脆弱性で警告）
audit-level=moderate

# npm ci を使用してロックファイルを厳密に使用
save-exact=true

# パッケージの自動更新を無効化
update-notifier=false

# タイムアウト設定
fetch-timeout=30000
fetch-retries=2

# セキュリティ監査を強制
audit=true

# パフォーマンス最適化設定
# Node.jsメモリ制限を増やす（デフォルト512MBから2GBへ）
node-options=--max-old-space-size=2048

# キャッシュ最適化
prefer-offline=true
cache-min=3600

# 進捗表示を無効化（パフォーマンス向上）
progress=false

# 資金調達メッセージを無効化
fund=false